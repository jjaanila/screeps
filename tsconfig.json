{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["esnext", "DOM"],
        "target": "es2017",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "rootDir": "./src/",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUmdGlobalAccess": true
    },
    "exclude": ["node_modules"]
}
